<h1>All Events</h1>

<div class="form-group">

</div>

<div class="container">
  <%= form_tag events_path, method: :get, class: "search-form" do %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= label_tag :query, "Search All Events" %>
          <%= text_field_tag :query, params[:query], class: "form-control search-field", placeholder: "Search any keyword" %>
        </div>
        <div class="form-group">
          <%= label_tag :name, "Event Name" %>
          <%= text_field_tag :name, params[:name], class: "form-control search-field", placeholder: "Event Name" %>
        </div>
        <div class="form-group">
          <%= label_tag :venue, "Venue" %>
          <%= text_field_tag :venue, params[:venue], class: "form-control search-field", placeholder: "Venue" %>
        </div>
        <div class="form-group">
          <%= label_tag :genre, "Genre" %>
          <%= select_tag :genre, options_for_select([['Conferences', 'conferences'], ['Expos', 'expos'], ['Community', 'community'], ['Performing Arts', 'performing-arts'], ['Concerts', 'concerts'], ['Festivals', 'festivals'], ['Sports', 'sports']], params[:genre]), prompt: "Select a genre", class: "form-control search-field" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= label_tag :date_min, "Start date" %>
          <%= date_field_tag :date_min, params[:date_min], class: "form-control search-field", placeholder: "Start date range" %>
        </div>
        <div class="form-group">
          <%= label_tag :date_max, "End date" %>
          <%= date_field_tag :date_max, params[:date_max], class: "form-control search-field", placeholder: "End date range" %>
        </div>
        <div class="form-group">
          <%= label_tag :price_min, "Minimum Price" %>
          <%= text_field_tag :price_min, params[:price_min], class: "form-control search-field", placeholder: "Minimum price", type: "number" %>
        </div>
        <div class="form-group">
          <%= label_tag :price_max, "Maximum Price" %>
          <%= text_field_tag :price_max, params[:price_max], class: "form-control search-field", placeholder: "Maximum price", type: "number" %>
        </div>
      </div>
    </div>
    <div class="form-group d-flex justify-content-center">
      <%= submit_tag "Search", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>


<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<% if @events.present? %>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-3">
        <%= link_to event_path(event), class: "card-link" do %>
          <div class="card mb-4">
            <% if event.genre == 'conferences' %>
            <%= cl_image_tag "https://res.cloudinary.com/dqfn0qd93/image/upload/v1679924660/event-buddy/conferences_zcopuh.jpg", height: 200, crop: :fill, class: "card-img-top" %>
            <% elsif event.genre == 'expos' %>
           <%= cl_image_tag "https://res.cloudinary.com/dqfn0qd93/image/upload/v1679924660/event-buddy/expos_b5yetg.jpg", height: 200, crop: :fill, class: "card-img-top" %>
            <% elsif event.genre == 'community' %>
           <%= cl_image_tag "https://res.cloudinary.com/dqfn0qd93/image/upload/v1679924658/event-buddy/community_pefhrk.jpg", height: 200, crop: :fill, class: "card-img-top" %>
            <% elsif event.genre == 'performing-arts' %>
           <%= cl_image_tag "https://res.cloudinary.com/dqfn0qd93/image/upload/v1679924656/event-buddy/performing-arts_dpsrgu.jpg", height: 200, crop: :fill, class: "card-img-top" %>
            <% elsif event.genre == 'concerts' %>
           <%= cl_image_tag "https://res.cloudinary.com/dqfn0qd93/image/upload/v1679924655/event-buddy/concerts_nmxcei.jpg", height: 200, crop: :fill, class: "card-img-top" %>
            <% elsif event.genre == 'festivals' %>
           <%= cl_image_tag "https://res.cloudinary.com/dqfn0qd93/image/upload/v1679924653/event-buddy/festivals_cxugfs.jpg", height: 200, crop: :fill, class: "card-img-top" %>
            <% elsif event.genre == 'sports' %>
           <%= cl_image_tag "https://res.cloudinary.com/dqfn0qd93/image/upload/v1679924652/event-buddy/sports_riuh1m.jpg", height: 200, crop: :fill, class: "card-img-top" %>
            <% elsif event.photo.attached? %>
              <%= cl_image_tag event.photo.key, height: 150, crop: :fill, class: "card-img-top" %>
            <% else %>
              <img src="https://upload.wikimedia.org/wikipedia/commons/0/0b/SFOperaHouse2_%288189967420%29.jpg" alt="default bike picture" class="card-img-top">
            <% end %>
            <div class="card-body">

            <h2 class="card-title"><%= event.name %></h2>
            <p class="card-text"><%= event.venue %></p>
            <p class="card-text">
            <span class="mr-2"><i class="fas fa-calendar-alt"></i> <%= event.date.strftime('%B %d, %Y') %></span>
              <span class="mr-2"><i class="fas fa-money-bill-wave"></i> <%= number_to_currency(event.price, precision: 2, unit: "â‚¬") %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
