<h1>All Events</h1>
<%= form_tag events_path, method: :get do %>
  <%= text_field_tag :query, params[:query], placeholder: "Search events" %>
  <%= text_field_tag :name, params[:name], placeholder: "Name" %>
  <%= text_field_tag :venue, params[:venue], placeholder: "Venue" %>
  <%= text_field_tag :genre, params[:genre], placeholder: "Genre" %>
  <%= text_field_tag :date_min, params[:date_min], placeholder: "Minimum date" %>
  <%= text_field_tag :date_max, params[:date_max], placeholder: "Maximum date" %>
  <%= text_field_tag :price_min, params[:price_min], placeholder: "Minimum price" %>
  <%= text_field_tag :price_max, params[:price_max], placeholder: "Maximum price" %>
  <%= submit_tag "Search" %>
<% end %>

<% if @events.present? %>
  <% @events.each do |event| %>
    <div class="border mb-2">
      <h2><%= event.name %></h2>
      <p><%= event.venue %></p>
      <p><%= event.genre %></p>
      <p><%= event.price %></p>
    </div>
  <% end %>
<% else %>
  <p>No results found...</p>
<% end %>
