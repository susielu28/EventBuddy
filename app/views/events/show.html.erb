<h1>Show Event</h1>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<div class="container py-5">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <div class="d-flex align-items-center justify-content-between mb-3">
            <h3 class="mb-0 card-title"><%= @event.name %></h3>
            <div>
              <% if current_user == @event.user %>
                <%= link_to "Edit", edit_event_path(@event), class: "btn btn-primary me-2" %>
                <%= link_to "Delete", event_path(@event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger me-2" %>
              <% end %>
            </div>
          </div>
          <div class="row">

            <div class="col-md-6">
              <dl class="row">
                <dt class="col-sm-4"><strong>Event Name:</strong></dt>
                <dd class="col-sm-8"><%= @event.name %></dd>

                <dt class="col-sm-4"><strong>Price:</strong></dt>
                <dd class="col-sm-8"><%= number_to_currency(@event.price) %></dd>

                <dt class="col-sm-4"><strong>Venue:</strong></dt>
                <dd class="col-sm-8"><%= @event.venue %></dd>

                <dt class="col-sm-4"><strong>Genre:</strong></dt>
                <dd class="col-sm-8"><%= @event.genre %></dd>

                <dt class="col-sm-4"><strong>Date:</strong></dt>
                <dd class="col-sm-8"><%= @event.date %></dd>

                <dt class="col-sm-4"><strong>Photo:</strong></dt>
                <%= cl_image_tag @event.photo.key  %>
              </dl>
            </div>
            <% if user_signed_in? %>
              <% if @event.event_members.exists?(user: current_user) %>
                <%= button_to "Unattend", event_unattend_path(@event), method: :delete, class: "btn btn-danger mt-4" %>
              <% else %>
                <%= button_to "Attend", event_attend_path(@event), method: :post, class: "btn btn-primary mt-4" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

<div class="container py-5">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">Write a Comment</h1>
      <%= simple_form_for [@event, @comment] do |f| %>
        <div class="form-group">
          <%= f.input :content, label: false, input_html: { class: 'form-control' } %>
        </div>
        <%= f.submit "Submit comment", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <h2 class="card-title"><strong>Comments</strong></h2>
      <ul class="list-group">
        <% @event.comments.each do |comment| %>
          <li class="list-group-item">
            <%= comment.content %>
            <br>
            <small>
              <strong><%= comment.user.first_name %></strong>
              <i><%= comment.created_at.strftime("%a %b %e at %l:%M %p") %></i>
            </small>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container py-5">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Event Attendees</h2>
      <ul class="list-group">
        <% @event.event_members.each do |member| %>
          <li class="list-group-item">
            <%= link_to member.user.first_name, user_path(member.user) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>



</div>
    <div class="mt-4">
      <%= link_to "Return", events_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
